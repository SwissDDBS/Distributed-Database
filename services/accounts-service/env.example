# Accounts Service Environment Variables

# Database Configuration
DATABASE_URL=postgresql://banking_user:banking_pass@localhost:5433/accounts_db

# Service Configuration
SERVICE_NAME=AccountsService
SERVICE_PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/accounts.log

# CORS Configuration
CORS_ORIGIN=*

# Two-Phase Commit Configuration
TRANSACTION_TIMEOUT=30000  # 30 seconds
MAX_RETRY_ATTEMPTS=3
